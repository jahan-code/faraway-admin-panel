{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:3010",
    "distDir": "../out"
  },
  "package": {
    "productName": "Faraway Admin Panel",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "Faraway Admin Panel",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "allowlist": {
      "shell": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "dialog": {
        "all": true
      }
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": ["msi"],
      "identifier": "com.faraway.admin",
      "windows": {
        "wix": {
          "language": "en-US"
        }
      }
    }
  }
}
